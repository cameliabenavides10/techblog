
<body>
{{#each posts as | post |}}
<div class="card">
  <div class="card-header">
  <p><a href="/post/{{post.id}}"> {{post.title}}</a></p><footer style="text-align: right;" class="blockquote-footer"> posted by: {{post.user.name}} at {{format_date createdAt}}</footer>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{post.body}}</p>
    </blockquote>
  </div>
</div>



{{/each}}

