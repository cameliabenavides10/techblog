
<div class="card">
  <div class="card-header"><input id="postId" type="hidden" name="postId" value="{{post.id}}" />
  <p>{{post.title}}</p><footer style="text-align: right;" class="blockquote-footer"> posted by: {{post.user.name}} at {{format_date post.createdAt}} </footer>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{post.body}}</p>
    </blockquote>
  </div>
</div>
<div class="card">
  <div class="card-header">
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{post.Comments.[0].body}}</p>
      <p>- {{post.Comments.[0].user.name}}, {{format_date post.createdAt}} </p>
    </blockquote>
  </div>
</div>


<form>
  <div class="form-group">
    <input type="form" class="form-control w-100 mh-100" style="height:100px;" id="commentsForm" placeholder="Comment"><br>
      <button type="submit" postId="{{post.id}}" class="btn btn-primary" id="formbutton">Submit</button>
  </div>
</form>


